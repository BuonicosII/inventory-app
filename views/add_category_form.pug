extends layout

block content
      form(method='POST', enctype='multipart/form-data')
          label(for='name') Category name:
          input#name(type='text', placeholder='Your category name' name='name' required value=(undefined===category ? '' : category.name) )
          button(type='submit') Submit

      if errors
        ul
          for error in errors
            li!= error.msg 